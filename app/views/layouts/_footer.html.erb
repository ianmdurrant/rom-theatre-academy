<% footer_menu = Spina::Navigation.find_by(name: 'footer_menu') %>

<footer class="footer">
  <div class="grid-container">
    <div class="grid-x grid-padding-x grid-padding-y align-middle">
      <div class="cell medium-4 large-3 footer-logo">
        <%= link_to (image_pack_tag 'logo-full.svg'), spina.root_path %><br /><br />

      </div>
      <div class="cell medium-4 large-6 text-center">
        menu
      </div>
      <div class="cell medium-4 large-3 text-right align-self-bottom">
        <h4>CONTACT US</h4>
        <p class="contactdetails"><a href="tel:<%= current_account.phone %>">T: <%= current_account.phone %></a><br />
        <a href="mailto:<%= current_account.email %>"><%= current_account.email %></a></p>
        <ul class="menu footer__social">
          <li>
            <%= link_to (image_pack_tag 'facebook-white.svg'), current_account.facebook %>
          </li>
          <li>
            <%= link_to (image_pack_tag 'instagram-white.svg'), current_account.instagram %>
          </li>
          <li>
            <%= link_to (image_pack_tag 'twitter-white.svg'), current_account.twitter %>
          </li>
        </ul>
        <p>&copy;<%= Time.now.year %> <%= current_account.name %><br /><%= link_to 'Website by Digital Reflow', 'https://www.digitalreflow.co.uk' %></p>
      </div>
    </div>
  </div>

</footer>
