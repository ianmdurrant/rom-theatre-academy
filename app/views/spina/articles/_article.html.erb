<div class="cell">
  <%= link_to spina.article_path(article), class: "article-block", style: "background-image: url(#{main_app.url_for(article.image.variant(resize: "1280x720")) if article.image.present?});" do %>
    <div class="article-block__overlay">
      <p class="article-block__date"><%= article.publish_date.strftime('%d %b %Y') %></p>
      <h2 class="article-block__title h4"><%= article.title %></h2>
      <span class="article-block__link">Read more</span>
    </div>
  <% end %>
</div>
